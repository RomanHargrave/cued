                } else {
                    cdio_loglevel_default = (cdio_log_level_t) sst;
                }
                break;

            case 'f':
                soundFileFormat = SF_FORMAT_FLAC;
                break;

            case 'i':
                getIndices = 1;
                break;

            case 'o':
