                }
                break;

            case 'x':
                fileNamePattern = optarg;
                break;

            case '?':
                cdio_log(CDIO_LOG_ASSERT, "unknown option \"%c\" specified", optopt);
                usage(exeName);
                break;

            default:
                cdio2_unix_error("getopt", "", 1);
                break;
