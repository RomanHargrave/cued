                qSubChannelFileName = optarg;
                break;

            case 'r':
                if (strtol2(optarg, NULL, 10, &sst)) {
                    cdio2_abort("invalid number of retries of \"%s\" specified", optarg);
                } else {
                    retries = (int) sst;
                }
